{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"includes": ["**", "!**/worker-configuration.d.ts", "!**/*.css"]
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"includes": ["**", "!**/worker-configuration.d.ts", "!**/*.css"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
